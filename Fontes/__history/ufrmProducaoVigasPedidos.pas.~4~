unit ufrmProducaoVigasPedidos;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, ufrmBaseEdicao, FireDAC.Stan.Intf,
  FireDAC.Stan.Option, FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS,
  FireDAC.Phys.Intf, FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt,
  Data.DB, FireDAC.Comp.DataSet, FireDAC.Comp.Client, Vcl.StdCtrls, Vcl.Buttons,
  Vcl.ExtCtrls, udmConn, Vcl.DBCtrls;

type
  TfrmProducaoVigasPedidos = class(TfrmBaseEdicao)
    edt_pedido: TEdit;
    Label1: TLabel;
    btn_busca_pedido: TBitBtn;
    Label2: TLabel;
    Label3: TLabel;
    DBText1: TDBText;
    DBText2: TDBText;
    DBText3: TDBText;
    DBText4: TDBText;
    Label4: TLabel;
    Label5: TLabel;
    Label6: TLabel;
    lbl_local_entrega: TLabel;
    procedure btn_busca_pedidoClick(Sender: TObject);
    procedure FormShow(Sender: TObject);
  private
    Fp_nosso_numero: string;
    Fp_endereco: string;
    Fp_nome: string;
    Fp_bairro: string;
    Fp_numero: string;
    Fp_bairroE: string;
    Fp_numeroE: string;
    Fp_nomeE: string;
    Fp_enderecoE: string;
    procedure prc_componenetes;

  public
    property p_nosso_numero: string read Fp_nosso_numero write Fp_nosso_numero;
    property p_nome: string read Fp_nome write Fp_nome;
    property p_endereco: string read Fp_endereco write Fp_endereco;
    property p_numero: string read Fp_numero write Fp_numero;
    property p_bairro: string read Fp_bairro write Fp_bairro;

    property p_nomeE: string read Fp_nomeE write Fp_nomeE;
    property p_enderecoE: string read Fp_enderecoE write Fp_enderecoE;
    property p_numeroE: string read Fp_numeroE write Fp_numeroE;
    property p_bairroE: string read Fp_bairroE write Fp_bairroE;


  end;

var
  frmProducaoVigasPedidos: TfrmProducaoVigasPedidos;

implementation

{$R *.dfm}

{ TfrmProducaoVigasPedidos }

procedure TfrmProducaoVigasPedidos.btn_busca_pedidoClick(Sender: TObject);
var
  loQry: TFDQuery;
begin
  inherited;

  p_nomeE     := '';
  p_enderecoE := '';
  p_numeroE   := '';
  p_bairroE   := '';

  {validar}
  if edt_pedido.Text = '' then
  begin
    ShowMessage('Informe um número de PEDIDO válido');
    edt_pedido.SetFocus;
    exit;
  end;
  qry.SQL.Text;
  {buscar pedido}
  qry.Close;
  qry.ParamByName('NOSSO_NUMERO').AsString  := edt_pedido.Text;
  qry.Open;

  if qry.IsEmpty then
  begin
    ShowMessage('Pedido NÃO cadastrado no sistema');
    edt_pedido.SetFocus;
    exit;
  end
  else
  begin
    {ve se tem local de entrega cadastrado}
    loQry:= TFDQuery.Create(Application);
    loQry.Connection := Conexao;
    loqry.SQL.Add('select * from PEDIDO_LOCAL_ENTREGA where PEDIDO_ID =:PEDIDO_ID');
    loQry.ParamByName('PEDIDO_ID').AsInteger := qry.FieldByName('ID').AsInteger;
    loQry.Open;
    if not qry.IsEmpty then
    begin
      p_nomeE     := qry.FieldByName('NOME').AsString;
      p_enderecoE := qry.FieldByName('ENDERECO').AsString;
      p_numeroE   := qry.FieldByName('NUMERO').AsString;
      p_bairroE   := qry.FieldByName('BAIRRO').AsString;

      lbl_local_entrega.Caption := p_nomeE + ' ' +
                                   p_enderecoE + ' ' +
                                   p_numeroE + ' ' +
                                   p_bairroE;



      FreeAndNil(loQry);
    end
    else
    lbl_local_entrega.Caption := '';

  end;

end;

procedure TfrmProducaoVigasPedidos.FormShow(Sender: TObject);
begin
  inherited;
  prc_componenetes;
end;

procedure TfrmProducaoVigasPedidos.prc_componenetes;
begin
  qry.Connection := conexao;
  qry.SQL.Add('select p.id, p.nosso_numero, ps.nome, ps.endereco, ps.bairro, ps.numero ');
  qry.SQL.Add('from pedidos p, pessoas ps ');
  qry.SQL.Add('where p.cliente_id = ps.id and p.nosso_numero =:nosso_numero ');

  lbl_local_entrega.Caption := '';

  titulo := 'Selecionar pedido';

end;

end.
