{$R *.dfm}

{ TfrmPixRecebidos }

procedure TfrmPixRecebidos.FormShow(Sender: TObject);
begin
  inherited;
  prc_componentes;
end;

procedure TfrmPixRecebidos.prc_componentes;
begin
  DBGrid1.Columns[0].Visible := false;
  DBGrid1.Columns[2].Visible := false;
  DBGrid1.Columns[3].Visible := false;
