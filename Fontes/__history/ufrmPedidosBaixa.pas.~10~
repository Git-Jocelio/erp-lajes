unit ufrmPedidosBaixa;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, ufrmBaseConexao, FireDAC.Stan.Intf,
  FireDAC.Stan.Option, FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS,
  FireDAC.Phys.Intf, FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt,
  Data.DB, FireDAC.Comp.DataSet, FireDAC.Comp.Client, Vcl.ExtCtrls,
  Vcl.StdCtrls, Vcl.Buttons, Vcl.Grids, Vcl.DBGrids, Vcl.ComCtrls;

type
  TfrmPedidosBaixa = class(TfrmBaseConexao)
    pnl_fundo: TPanel;
    pnl_cabecalho: TPanel;
    btn_fechar: TSpeedButton;
    lbl_titulo: TLabel;
    pnl_separa_topo: TPanel;
    pnl_traco: TPanel;
    Panel5: TPanel;
    DBGrid1: TDBGrid;
    pnl_resultado: TPanel;
    lbl_resultado: TLabel;
    pnRodape: TPanel;
    pnl_botoes: TPanel;
    btnOk: TBitBtn;
    btnFechar: TBitBtn;
    ds: TDataSource;
    StatusBar: TStatusBar;
    procedure btn_fecharClick(Sender: TObject);
    procedure FormActivate(Sender: TObject);
    procedure FormClose(Sender: TObject; var Action: TCloseAction);
    procedure FormShow(Sender: TObject);
    procedure DBGrid1TitleClick(Column: TColumn);
    procedure dsDataChange(Sender: TObject; Field: TField);
    procedure btnOkClick(Sender: TObject);
    procedure DBGrid1DblClick(Sender: TObject);
    procedure btnFecharClick(Sender: TObject);
  private
    procedure prc_componentes;
    procedure prc_busca_local_entrega(pedido_id: integer);
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmPedidosBaixa: TfrmPedidosBaixa;

implementation

{$R *.dfm}

uses unit_principal, udmConn, unit_funcoes, ufrmPedidosBaixaE;

procedure TfrmPedidosBaixa.btnFecharClick(Sender: TObject);
begin
  inherited;
  CLOSE;
end;

procedure TfrmPedidosBaixa.btnOkClick(Sender: TObject);
begin
  inherited;
  try
    if frmPedidosBaixaE = nil then
      frmPedidosBaixaE := TfrmPedidosBaixaE.Create(application) ;
   frmPedidosBaixaE.codigo := qry.FieldByName('ID').AsInteger;

    form_principal.prc_controla_menu(false);

    frmPedidosBaixaE.top    := form_principal.pnl_Principal.Top;
    frmPedidosBaixaE.Left   := form_principal.pnl_menulateral.Width - 9;
    frmPedidosBaixaE.Width  := form_principal.pnl_principal.Width + 19;
    frmPedidosBaixaE.Height := form_principal.pnl_principal.Height + 5;


   frmPedidosBaixaE.ShowModal;
  finally
    FreeAndNil(frmPedidosBaixaE);
  end;
end;

procedure TfrmPedidosBaixa.btn_fecharClick(Sender: TObject);
begin
  inherited;
  close;
end;

procedure TfrmPedidosBaixa.prc_componentes;
begin
  qry.open;

  {centraliza os botões}
  pnl_botoes.Left := trunc(pnRodape.Width/2) - ( trunc(pnl_botoes.Width /2) );


  prc_ordenar_dgrid( ds, DBGrid1, DBGrid1.Columns[0] ) ;


  //ajustas as colunas do dbgrid
  prc_ajustar_colunas_grid( DBGrid1 );

  //aumenta o tamanho da linha do ddgrid
  prc_ajusta_tamanho_linha( DBGrid1 );

end;


procedure TfrmPedidosBaixa.DBGrid1DblClick(Sender: TObject);
begin
  inherited;
  if not qry.IsEmpty then btnOk.Click;
end;

procedure TfrmPedidosBaixa.DBGrid1TitleClick(Column: TColumn);
begin
  inherited;
  prc_ordenar_dgrid( ds, DBGrid1, column ) ;

end;

procedure TfrmPedidosBaixa.dsDataChange(Sender: TObject; Field: TField);
begin
  inherited;
  if qry.FieldByName('NOME').AsString = 'CONSUMIDOR' then
    prc_busca_local_entrega(qry.FieldByName('ID').AsInteger)
  else
   StatusBar.Panels[0].Text := '';

  btnok.Enabled := not qry.IsEmpty;
end;

procedure TfrmPedidosBaixa.prc_busca_local_entrega( pedido_id: integer );
var
  loQry : TFDQuery;
begin
  try
    loQry := TFDQuery.Create(application);
    loQry.Connection := conexao;
    loQry.SQL.Clear;
    loQry.SQL.Add('select NOME, ENDERECO, NUMERO, BAIRRO, CIDADE from PEDIDOS_LOCAL_ENTREGA where PEDIDO_ID =:PEDIDO_ID');
    loQry.ParamByName('PEDIDO_ID').AsInteger := pedido_id;
    loQry.Open;
    if not loQry.IsEmpty then
    begin
      StatusBar.Panels[0].Text := ' - Cliente : ' +
                                  loQry.FieldByName('NOME').AsString + ' - ' +
                                  'Endereço : ' +
                                  loQry.FieldByName('ENDERECO').AsString + ' ' +
                                  loQry.FieldByName('NUMERO').AsString + ' ' +
                                  loQry.FieldByName('BAIRRO').AsString + ' ' +
                                  loQry.FieldByName('CIDADE').AsString;



    end;

  finally
    loQry.Close;
    FreeAndNil(loQry);
  end;
end;


procedure TfrmPedidosBaixa.FormActivate(Sender: TObject);
begin
  inherited;
    form_principal.prc_controla_menu(false);

    // se abrir dentro no painel principal no funciona os edites
    //loform.Parent := form_principal.pnl_principal;

    frmPedidosBaixa.top    :=  form_principal.pnl_Principal.Top;
    frmPedidosBaixa.Left   := form_principal.pnl_menulateral.Width;

    frmPedidosBaixa.Width  := form_principal.pnl_principal.Width;
    frmPedidosBaixa.Height := form_principal.pnl_principal.Height;

end;

procedure TfrmPedidosBaixa.FormClose(Sender: TObject; var Action: TCloseAction);
begin
  inherited;
 form_principal.prc_controla_menu(true);
end;

procedure TfrmPedidosBaixa.FormShow(Sender: TObject);
begin
  inherited;
  prc_componentes;
end;

end.
