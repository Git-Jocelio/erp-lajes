unit ufrmPesquisaMateriaPrima;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, ufrmBasePesquisa, Data.DB,
  FireDAC.Stan.Intf, FireDAC.Stan.Option, FireDAC.Stan.Param,
  FireDAC.Stan.Error, FireDAC.DatS, FireDAC.Phys.Intf, FireDAC.DApt.Intf,
  FireDAC.Stan.Async, FireDAC.DApt, Vcl.StdCtrls, FireDAC.Comp.DataSet,
  FireDAC.Comp.Client, Vcl.Grids, Vcl.DBGrids, Vcl.Buttons, Vcl.ExtCtrls;

type
  TfrmPesquisaMateriaPrima = class(TfrmBasePesquisa)
    Label1: TLabel;
    edQtde: TEdit;
    CheckBox1: TCheckBox;
    procedure btnFiltrarClick(Sender: TObject);
    procedure btnConfirmaClick(Sender: TObject);
    procedure CheckBox1Click(Sender: TObject);
    procedure dsDataChange(Sender: TObject; Field: TField);
  private
    FCodigo: integer;
    FDescricao: string;
    FUnidade: string;
    FQuantidade: integer;
    FCusto: double;

    function Validar: boolean;
    { Private declarations }
  public
     property Codigo: integer read FCodigo write FCodigo;
     property Descricao: string read FDescricao write FDescricao;
     property Unidade: string read FUnidade write FUnidade;
     property Custo: double read FCusto write FCusto;
     property Quantidade: integer read FQuantidade write FQuantidade;


  end;

var
  frmPesquisaMateriaPrima: TfrmPesquisaMateriaPrima;

implementation

{$R *.dfm}

uses udmConn, uBiblioteca, uTipos;

procedure TfrmPesquisaMateriaPrima.btnConfirmaClick(Sender: TObject);
begin
  inherited;
  Codigo := -1;

  if validar then
  begin
    // carregar as propriedades
    Codigo:= qry.FieldByName('ID').AsInteger;
    Descricao:= qry.FieldByName('DESCRICAO').AsString;
    Unidade:= qry.FieldByName('UNIDADE').AsString;
    Quantidade:= strtoint(edQtde.Text);
    Custo:= qry.FieldByName('PRECO_CUSTO').AsFloat;

    // fecha o form
    close;
  end;



end;

procedure TfrmPesquisaMateriaPrima.btnFiltrarClick(Sender: TObject);
begin
  inherited;

  uBiblioteca.FilterCds(qry,fsString, '%'+edLocalizar.Text+'%' );
  btnConfirma.Enabled := not qry.IsEmpty;

end;


procedure TfrmPesquisaMateriaPrima.CheckBox1Click(Sender: TObject);
begin
  inherited;
  edLocalizar.Text := '%%%%';
  btnFiltrarClick(self);

end;

procedure TfrmPesquisaMateriaPrima.dsDataChange(Sender: TObject; Field: TField);
begin
  inherited;
  if qry.FieldByName('AGREGADO').AsString = 'S' then
    label1.Caption := 'Quantidade de Latas'
  else
    label1.Caption := 'Quantidade de Kilos';

end;

function TfrmPesquisaMateriaPrima.Validar: boolean;
begin
  result := false;

  if qry.IsEmpty then
  begin
    ShowMessage('Informe as matérias primas que compõe o concreto');
    edLocalizar.SetFocus;
    exit;
  end;

  if StrToIntDef(edQtde.Text,0) <= 0 then
  begin
    ShowMessage('Informe um valor valido');
    edQtde.SetFocus;
    exit;
  end;


  result := true;
end;


end.
