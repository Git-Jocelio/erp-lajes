unit ufrmPedidosPesquisaConcreto;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, ufrmBaseConexao, FireDAC.Stan.Intf,
  FireDAC.Stan.Option, FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS,
  FireDAC.Phys.Intf, FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt,
  Vcl.ExtCtrls, Data.DB, FireDAC.Comp.DataSet, FireDAC.Comp.Client,
  Vcl.StdCtrls, Vcl.DBCtrls, Vcl.Buttons;

type
  TfrmPedidosPesquisaConcreto = class(TfrmBaseConexao)
    pnl_fundo: TPanel;
    pnl_cabecalho: TPanel;
    lbl_titulo: TLabel;
    SpeedButton1: TSpeedButton;
    pnl_separa_topo: TPanel;
    Label2: TLabel;
    cbx_produto: TDBLookupComboBox;
    Label8: TLabel;
    edt_unitario: TEdit;
    Label11: TLabel;
    edt_quantidade: TEdit;
    btn_confirma: TBitBtn;
    btn_cancelar: TBitBtn;
    ds: TDataSource;
    qryID: TIntegerField;
    qryDESCRICAO: TStringField;
    qryUNIDADE: TStringField;
    qryPRECO_CUSTO: TCurrencyField;
    procedure SpeedButton1Click(Sender: TObject);
    procedure dsDataChange(Sender: TObject; Field: TField);
    procedure cbx_produtoCloseUp(Sender: TObject);
    procedure btn_cancelarClick(Sender: TObject);
    procedure btn_confirmaClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    function fnc_validar: boolean;
    { Private declarations }
  public
    confirmado : boolean;
    produto_id : integer;
    descricao  : string;
    unidade    : string;
  end;

var
  frmPedidosPesquisaConcreto: TfrmPedidosPesquisaConcreto;

implementation

{$R *.dfm}

uses unit_funcoes, udmConn;

procedure TfrmPedidosPesquisaConcreto.btn_cancelarClick(Sender: TObject);
begin
  inherited;
  close;
end;

function TfrmPedidosPesquisaConcreto.fnc_validar:boolean;
begin
  result := false;
  if cbx_produto.Text = '' then
  begin
    CriarMensagem('AVISO','INFORME UM PRODUTO');
    cbx_produto.SetFocus;
    Exit;
  end;

  if strtofloatdef( edt_unitario.Text,0) <= 0 then
  begin
    CriarMensagem('AVISO','INFORME UM VALOR VÁLIDO');
    edt_unitario.SetFocus;
    Exit;
  end;

  if strtofloatdef( edt_quantidade.Text,0) <= 0 then
  begin
    CriarMensagem('AVISO','INFORME UMA QUANTIDADE VÁLIDA');
    edt_quantidade.SetFocus;
    Exit;
  end;

  result := true;
end;

procedure TfrmPedidosPesquisaConcreto.FormCreate(Sender: TObject);
begin
  inherited;
  confirmado := false;
end;

procedure TfrmPedidosPesquisaConcreto.btn_confirmaClick(Sender: TObject);
begin
  inherited;
  if fnc_validar then
  begin
    confirmado := true;
    produto_id := qryID.AsInteger;
    descricao  := qryDESCRICAO.AsString;
    unidade    := qryUNIDADE.AsString;
    close;
  end;
end;

procedure TfrmPedidosPesquisaConcreto.cbx_produtoCloseUp(Sender: TObject);
begin
  inherited;
  btn_confirma.Enabled := cbx_produto.Text <> '';
end;

procedure TfrmPedidosPesquisaConcreto.dsDataChange(Sender: TObject;
  Field: TField);
begin
  inherited;

  edt_unitario.Text := formatfloat('0.00', qry.FieldByName('PRECO_CUSTO').AsFloat);
end;

procedure TfrmPedidosPesquisaConcreto.SpeedButton1Click(Sender: TObject);
begin
  inherited;
  close;
end;

end.
