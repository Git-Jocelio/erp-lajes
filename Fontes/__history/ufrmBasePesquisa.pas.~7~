unit ufrmBasePesquisa;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, ufrmBaseConexao, FireDAC.Stan.Intf,
  FireDAC.Stan.Option, FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS,
  FireDAC.Phys.Intf, FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt,
  Data.DB, Vcl.Grids, Vcl.DBGrids, Vcl.StdCtrls, Vcl.ExtCtrls,
  FireDAC.Comp.DataSet, FireDAC.Comp.Client, Vcl.Buttons;

type
  TfrmBasePesquisa = class(TfrmBaseConexao)
    Panel1: TPanel;
    edLocalizar: TLabeledEdit;
    db: TDBGrid;
    ds: TDataSource;
    btnConfirma: TBitBtn;
    btnFechar: TBitBtn;
    btnFiltrar: TBitBtn;
    procedure btnFecharClick(Sender: TObject);
    procedure dsDataChange(Sender: TObject; Field: TField);
    procedure edLocalizarChange(Sender: TObject);
    procedure dbDblClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmBasePesquisa: TfrmBasePesquisa;

implementation

{$R *.dfm}


procedure TfrmBasePesquisa.btnFecharClick(Sender: TObject);
begin
  inherited;
  close;
end;

procedure TfrmBasePesquisa.dbDblClick(Sender: TObject);
begin
  inherited;
  if btnConfirma.Enabled then
    btnConfirma.Click;
end;

procedure TfrmBasePesquisa.dsDataChange(Sender: TObject; Field: TField);
begin
  inherited;
  btnConfirma.Enabled := not qry.IsEmpty;

end;

procedure TfrmBasePesquisa.edLocalizarChange(Sender: TObject);
begin
  inherited;
  btnFiltrar.Enabled := length(edLocalizar.text) > 3;
end;

end.
